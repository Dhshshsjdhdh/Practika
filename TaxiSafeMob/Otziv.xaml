<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiSafeMob.Otziv"  Background="#f5c81b">
    <ContentPage.Content >
        <StackLayout>
            <Frame BackgroundColor="#222222" Padding="24" CornerRadius="0">
                <Label Text="Коментарии" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <ListView Background="white" Margin="20"></ListView>


            <Entry x:Name="Comment" Placeholder="Ваш комментарий" TextColor="Black" PlaceholderColor="black" Margin=" 25"/>
    
            <Button Margin="20" CornerRadius="15" BackgroundColor="#222222"
                Text="Отправить" TextColor="White"
                x:Name="Otpravit" Clicked="Otpravit_Clicked"/>
            <Button Margin="20" CornerRadius="15" BackgroundColor="#222222"
                Text="Вернуться назад" TextColor="White"
                x:Name="Back" Clicked="Back_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>